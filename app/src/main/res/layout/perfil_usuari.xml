<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <!--eliminar -->
    <ImageView
        android:id="@+id/imatge_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="84dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        app:srcCompat="@android:color/background_dark" />

    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="112dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        app:srcCompat="@android:color/background_dark"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/btn_default"
        android:elevation="14dp"
        android:visibility="visible"
 />

    <TextView
        android:id="@+id/usernamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/imagen_perfil"
        android:layout_toRightOf="@+id/amigos"
        android:layout_toEndOf="@+id/amigos" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernamee"
        android:layout_alignStart="@+id/usernamee"
        android:layout_below="@+id/usernamee"
        android:layout_marginTop="14dp"
        android:text="Email"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/gustos_musicales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="Gustos musicales"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <View
        android:id="@+id/linia_amigos"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="50dp"
        android:layout_below="@id/gustos_musicales" />

    <View
        android:id="@+id/linia_amigos2"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="60dp"
        android:layout_below="@id/linia_amigos" />

    <TextView
        android:id="@+id/amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linia_amigos2"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imatge_perfil"
        android:layout_toRightOf="@+id/imagen_perfil"
        android:text="AMIGOS"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siguiendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGUIENDO"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/amigos"
        android:layout_alignBottom="@+id/amigos"
        android:layout_toRightOf="@+id/usernamee"
        android:layout_toEndOf="@+id/usernamee" />

    <TextView
        android:id="@+id/favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linia_amigos2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:text="Favoritos"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/muro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos"
        android:layout_below="@+id/favoritos"
        android:layout_marginTop="152dp"
        android:text="Muro"
        android:textSize="17sp" />

    <HorizontalScrollView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/favoritos"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/editText"
            android:orientation="horizontal"
            android:layout_below="@+id/favoritos"
            android:layout_alignRight="@+id/opciones"
            android:layout_alignEnd="@+id/opciones"
            android:layout_alignLeft="@+id/favoritos"
            android:layout_alignStart="@+id/favoritos"
            android:weightSum="1">

            <VideoView
                android:id="@+id/vid0"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                 />


            <VideoView
                android:id="@+id/vid1"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />

            <VideoView
                android:id="@+id/vid2"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />
            <VideoView
                android:id="@+id/vid3"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />


        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>
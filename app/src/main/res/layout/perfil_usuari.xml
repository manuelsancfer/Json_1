<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imatge_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="84dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imatge_perfil"
        android:layout_centerHorizontal="true"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="14dp"
        android:text="Email"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/gustos_musicales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="Gustos musicales"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <View
        android:id="@+id/linia_amigos"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="80dp"
        android:layout_below="@id/gustos_musicales" />

    <View
        android:id="@+id/linia_amigos2"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="60dp"
        android:layout_below="@id/linia_amigos" />

    <TextView
        android:id="@+id/amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linia_amigos2"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imatge_perfil"
        android:layout_toRightOf="@+id/imatge_perfil"
        android:text="AMIGOS"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siguiendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/amigos"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/username"
        android:layout_toRightOf="@+id/username"
        android:text="SIGUIENDO"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/amigos" />

    <TextView
        android:id="@+id/favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linia_amigos2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:text="Favoritos"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/muro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos"
        android:layout_below="@+id/favoritos"
        android:layout_marginTop="152dp"
        android:text="Muro"
        android:textSize="17sp" />

    <Button
        android:id="@+id/a単adir_amigo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linia_amigos2"
        android:layout_alignLeft="@+id/gustos_musicales"
        android:layout_alignStart="@+id/gustos_musicales"
        android:layout_marginBottom="12dp"
        android:elevation="9dp"
        android:lineSpacingExtra="8sp"
        android:text="A単adir amigo"
        android:textAllCaps="false"
        android:textColorLink="?android:attr/colorAccent"
        android:textSize="14sp" />

    <Button
        android:id="@+id/opciones"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/a単adir_amigo"
        android:layout_alignEnd="@+id/siguiendo"
        android:layout_alignRight="@+id/siguiendo"
        android:layout_toRightOf="@+id/gustos_musicales"
        android:text="..."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/a単adir_amigo" />

    <HorizontalScrollView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/favoritos"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/editText"
            android:orientation="horizontal"
            android:layout_below="@+id/favoritos"
            android:layout_alignRight="@+id/opciones"
            android:layout_alignEnd="@+id/opciones"
            android:layout_alignLeft="@+id/favoritos"
            android:layout_alignStart="@+id/favoritos"
            android:weightSum="1">

            <VideoView
                android:id="@+id/vid0"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                 />


            <VideoView
                android:id="@+id/vid1"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />

            <VideoView
                android:id="@+id/vid2"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />
            <VideoView
                android:id="@+id/vid3"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                />

        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>
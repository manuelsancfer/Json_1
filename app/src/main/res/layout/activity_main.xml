<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manuelsanchezferna.json.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecylerView"
        android:layout_width= "match_parent"
        android:layout_height="150sp"
        android:layout_below="@+id/linia_vid"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/linia_vid"
        android:layout_alignRight="@+id/linia_vid"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_alignEnd="@+id/vid0_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/vid0_name"
        android:background="@android:drawable/btn_default"
        android:elevation="14dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="consulta"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:id="@+id/top_videos"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vid0_art"
        android:layout_alignStart="@+id/vid0_art"
        android:layout_below="@+id/vid0_art"
        android:fontFamily="sans-serif-condensed"
        android:text="TOP VÍDEOS"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="49dp" />


    <View
        android:id="@+id/rectangle"
        android:layout_width="wrap_content"
        android:layout_height="90sp"
        android:layout_alignBottom="@+id/search"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignTop="@+id/search"
        android:background="#f1f1f1" />

    <View
        android:id="@+id/linia_topvideos"
        android:layout_marginLeft="37dp"
        android:layout_height="5sp"
        android:layout_width="310sp"
        android:background="#ce009688"
        android:layout_below="@+id/top_videos" />
    <View
        android:id="@+id/linia_vid"
        android:layout_marginLeft="37dp"
        android:layout_height="5sp"
        android:layout_width="310sp"
        android:background="#ce009688"
        android:layout_below="@+id/videos" />

    <Button
        android:id="@+id/videos"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linia_vid"
        android:layout_alignStart="@+id/linia_vid"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed"
        android:text="VÍDEOS"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="231dp" />

    <ImageButton
        android:id="@+id/search"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="37sp"
        android:layout_height="40sp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:elevation="0dp"
        android:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/mensajes"
        android:layout_toStartOf="@+id/mensajes" />

    <ImageButton
        android:id="@+id/mensajes"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rectangle"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:tint="@android:color/background_light"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <TextView
        android:id="@+id/vid0_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/vid0_art"
 />

    <TextView
        android:id="@+id/vid0_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/linia_amigos"
        android:layout_marginBottom="50dp" />



</RelativeLayout>
